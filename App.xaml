<?xml version = "1.0" encoding = "UTF-8" ?>
<Application xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:MauiAppScrollViewProblemNet8"
             x:Class="MauiAppScrollViewProblemNet8.App">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Resources/Styles/Colors.xaml" />
                <ResourceDictionary Source="Resources/Styles/Styles.xaml" />
            </ResourceDictionary.MergedDictionaries>


            <Style x:Key="GridLabelEntry" TargetType="Grid">
                <Setter Property="ColumnSpacing" Value="10" />
                <Setter Property="RowDefinitions" Value="Auto" />
                <Setter Property="ColumnDefinitions" Value="*, *" />
            </Style>

            <Style x:Key="StackLayoutMain" TargetType="StackLayout">
                <Setter Property="Padding" Value="6" />
                <Setter Property="Orientation" Value="Vertical" />
                <Setter Property="Spacing" Value="10" />
            </Style>
            
        </ResourceDictionary>
    </Application.Resources>
</Application>
